<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style TargetType="FrameworkElement">
    <Setter Property="ToolTipService.InitialShowDelay" Value="250" />
    <Setter Property="ToolTipService.ShowDuration" Value="8000" />
    <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
  </Style>

  <Style TargetType="ToolTip">
    <Setter Property="Placement" Value="Mouse" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Padding" Value="8,6" />
    <Setter Property="Background" Value="{StaticResource ColorSlate900}" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="BorderBrush" Value="{StaticResource ColorSlate800}" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>

  <Style x:Key="ButtonBase" TargetType="Button">
    <Setter Property="Padding" Value="12,4" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Foreground" Value="White" />
  </Style>
  <Style x:Key="ButtonPrimary" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
    <Setter Property="Background" Value="{StaticResource ColorInfoStrong}" />
  </Style>
  <Style x:Key="ButtonSuccess" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
    <Setter Property="Background" Value="{StaticResource ColorSuccessDark}" />
  </Style>
  <Style x:Key="ButtonDanger" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
    <Setter Property="Background" Value="{StaticResource ColorDangerDark}" />
  </Style>
  <Style x:Key="ButtonSecondary" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
    <Setter Property="Background" Value="{StaticResource ColorNeutral600}" />
  </Style>

  <Style TargetType="GroupBox">
    <Setter Property="BorderBrush" Value="{StaticResource ColorBorderSubtle}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="10" />
  </Style>
</ResourceDictionary>
