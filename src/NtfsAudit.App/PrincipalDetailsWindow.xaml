<Window x:Class="NtfsAudit.App.PrincipalDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dettagli" Height="420" Width="640" WindowStartupLocation="CenterOwner">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <TextBlock x:Name="HeaderText" FontWeight="Bold" Margin="0,0,0,8" />
    <Grid Grid.Row="1">
      <TextBlock x:Name="EmptyText" Text="Nessun elemento trovato." HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" />
      <DataGrid x:Name="EntriesGrid"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                EnableRowVirtualization="True"
                EnableColumnVirtualization="True"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ColumnWidth="SizeToHeader"
                MinColumnWidth="80">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="200" />
          <DataGridTextColumn Header="SID" Binding="{Binding Sid}" Width="240" />
          <DataGridTextColumn Header="Tipo" Binding="{Binding Type}" Width="120" />
          <DataGridCheckBoxColumn Header="Disabilitato" Binding="{Binding IsDisabled, Mode=OneWay}" Width="120" />
        </DataGrid.Columns>
      </DataGrid>
    </Grid>
  </Grid>
</Window>
